<%- partial ('partials/statusmessage.ejs') %>

<h2>Players</h2>
<table class="table table-striped table-bordered" id="playerTable" style="width:100%">
  <thead>
    <tr>
      <th>First Name</th>
      <th>Last Name</th>
      <th>Number</th>
      <th>Position</th>
    </tr>
  </thead>
  <tbody>
  <% if(typeof players != "undefined" && players.length > 0){ %>
    <% players.forEach(function(player){ %>
      <tr>
        <td><%= player.firstName %></td>
        <td><%= player.lastName %></td>
        <td><%= player.number %></td>
        <td><%= player.position %></td>
      </tr>
    <% }) %>
  <% } %>
  </tbody>
</table>
